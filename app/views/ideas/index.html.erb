<h1>Your Ideas</h1>

<% @ideas.in_groups_of(3).each do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture, width: '100%' if idea.picture.present? %>
        <h4 class="text-center"><%= link_to idea.name.upcase, idea %></h4>
        <%= idea.content %> <br />
				<%= idea.category.name %> 
      </div>
    <% end %>
  </div>
<% end %>

